{
  "configs": [
    {
      // "block_type": "http/events/stream",
      "block_type": "http",

      // the block which will
      "listener": {
        "http": {
          "listen_on": 80, // default

          "redirect": true // if this is true, then send 302(??) to the browser or whatever
        },

        "https": {
          "listen_on": 443, // default
          "ssl_certificate_path": "",
          "ssl_certificate_key_path": ""
        }
      },
      "clusters": [
        {
          "id": "<upstream server cluster name>",
          "algorithm": "",
          "server_configs": [
            {
              "is_backup": true,
              "is_active": false,
              "base_url": "localhost:2222/api/v1",
              "health_check": {
                "is_disabled": false,
                "url": "localhost:2222/api/v1/health",
                "timeout": 3000,
                "tries": "5 or null"
              }
            }
          ]
        }
      ],
      "location": [
        {
          "match": "/api/v1/",
          "stages": [
            {
              "action": "proxy_pass, url rewriting, redirecting, caching, ratelimiting, error_page, auth_basic, add_header "
            }
          ]
        }
      ]
    }
  ]
}